<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name = "MaterialTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>
